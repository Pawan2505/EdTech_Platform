@* @model IEnumerable<Edtech.Models.Student2> *@

@model Edtech.Models.Student2

@{
    ViewData["Title"] = "Course Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EdTech Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Add your custom stylesheets here -->
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        

                        <h1>Enrollment Confirmation</h1>

                        <div>
                            <h2>Course Information</h2>
                            <p><strong>Title:</strong> @Model.CourseTitle</p>
                            <p><strong>Instructor:</strong> @Model.InstructorName</p>
                            <p><strong>Description:</strong> @Model.Description</p>
                            <p><strong>Duration:</strong> @Model.Duration</p>
                            <p><strong>Price:</strong> @Model.Price</p>

                            <video width="320" height="240" controls>
                                <source src="~/video/@Model.ProfileVideo1" type="video/mp4">
                            </video>

                            @if (!string.IsNullOrEmpty(Model.ProfileVideo2) && Model.ProfileVideo2 != "Empty_Content")
                            {
                                <video width="320" height="240" controls>
                                    <source src="~/video/@Model.ProfileVideo2" type="video/mp4">
                                </video>
                            }

                            @if (!string.IsNullOrEmpty(Model.ProfileVideo3) && Model.ProfileVideo3 != "Empty_Content")
                            {
                                <video width="320" height="240" controls>
                                    <source src="~/video/@Model.ProfileVideo3" type="video/mp4">
                                </video>
                            }
                            @if (!string.IsNullOrEmpty(Model.ProfileVideo4) && Model.ProfileVideo4 != "Empty_Content")
                            {
                                <video width="320" height="240" controls>
                                    <source src="~/video/@Model.ProfileVideo4" type="video/mp4">
                                </video>
                            }
                            @if (!string.IsNullOrEmpty(Model.ProfileVideo5) && Model.ProfileVideo5 != "Empty_Content")
                            {
                                <video width="320" height="240" controls>
                                    <source src="~/video/@Model.ProfileVideo5" type="video/mp4">
                                </video>
                            }

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>

</body>
</html>

